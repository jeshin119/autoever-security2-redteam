# ./.env (APT 프로젝트 최종 버전)

# --- 서버 포트 설정 ---
BACKEND_PORT=3001
FRONTEND_PORT=5173
PMA_PORT=8081 # PhpMyAdmin 포트를 Jenkins(8080)와 겹치지 않게 8081로 변경

# --- MySQL 데이터베이스 설정 ---
# 웹서버팀의 설정과 동일하게 맞춥니다. (취약한 계정 정보는 시나리오에 적합합니다)
DB_HOST=database
DB_PORT=3306
DB_NAME=vintagemarket
DB_USER=user
DB_PASSWORD=password
DB_ROOT_PASSWORD=supersecret

# --- 애플리케이션 환경 변수 ---
NODE_ENV=development

# [가장 중요한 수정]
# 외부 팀원 PC의 브라우저가 API 서버(backend)에 접속하기 위한 주소입니다.
# 반드시 localhost가 아닌, Docker가 실행되는 서버 PC의 실제 IP 주소를 기입해야 합니다.
VITE_API_URL=http://192.168.201.102:3001/api
VITE_BACKEND_URL=http://192.168.201.102:3001
REACT_APP_API_URL=http://192.168.201.102:3001/api 
REACT_APP_BACKEND_URL=http://192.168.201.102:3001
# Backend가 사용할 환경 변수들
FRONTEND_URL=http://192.168.201.102:5173
JWT_SECRET=your-super-secret-jwt-key-change-in-production
SESSION_SECRET=your-session-secret-change-in-production
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
DEBUG=vintage-market:*